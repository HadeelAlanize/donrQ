<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/sqlsignbkg"
    tools:context="com.example.MAproject.DonorDetails">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:elevation="4dp"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="150dp"
            android:orientation="vertical"
            android:padding="20dp">

            <EditText
                android:id="@+id/name"
                android:layout_width="350dp"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/white_border"
                android:drawableLeft="@drawable/ic_baseline_person_24"
                android:drawablePadding="8dp"
                android:hint="Full Name"
                android:padding="8dp" />

            <EditText
                android:id="@+id/mobile"
                android:layout_width="350dp"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/white_border"
                android:drawableLeft="@drawable/ic_baseline_phone_android_24"
                android:drawablePadding="8dp"
                android:hint="Mobile No"
                android:padding="8dp" />

            <EditText
                android:id="@+id/city"
                android:layout_width="350dp"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/white_border"
                android:drawableLeft="@drawable/ic_baseline_location_city_24"
                android:drawablePadding="8dp"
                android:hint="City"
                android:padding="8dp" />

            <EditText
                android:id="@+id/address"
                android:layout_width="350dp"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/white_border"
                android:drawableLeft="@drawable/ic_baseline_home_24"
                android:drawablePadding="8dp"
                android:hint="Address"
                android:padding="8dp" />

            <EditText
                android:id="@+id/gender"
                android:layout_width="350dp"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/white_border"
                android:drawableLeft="@drawable/ic_baseline_people_24"
                android:drawablePadding="8dp"
                android:hint="Gender"

                android:padding="8dp" />

            <EditText
                android:id="@+id/bloodType"
                android:layout_width="350dp"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/white_border"
                android:drawableLeft="@drawable/ic_baseline_bloodtype_24"
                android:drawablePadding="8dp"
                android:hint="Blood Type"
                android:padding="8dp" />



            <EditText
                android:id="@+id/birthdate"
                android:layout_width="350dp"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/white_border"
                android:drawableLeft="@drawable/ic_baseline_calendar_month_24"
                android:drawablePadding="8dp"
                android:hint="Birth Date"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:padding="8dp" />

            <Button
                android:id="@+id/update_button"
                android:layout_width="350dp"
                android:layout_height="70dp"
                android:layout_marginTop="20dp"
                android:backgroundTint="#8b0000"
                android:text="Update"
                android:textSize="18sp"
                app:cornerRadius="20dp" />
            <Button
                android:id="@+id/back"
                android:layout_width="350dp"
                android:layout_height="70dp"
                android:layout_marginTop="20dp"
                android:backgroundTint="#8b0000"
                android:text="go home"
                android:textSize="18sp"
                app:cornerRadius="20dp" />




        </LinearLayout>

    </LinearLayout>

</ScrollView>